<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">


    <TextView
        android:id="@+id/add_fragment_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_fragment_name"
        android:fontFamily="@font/oswald_bold"
        android:text="Add weight"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="172dp"
        android:layout_height="136dp"
        android:layout_below="@id/add_fragment_textview_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/ic_logo" />


    <EditText
        android:id="@+id/weight_edittext_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/logo_id"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/oswald_light"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#888888"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/date_edittext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/bg_input"
        android:layout_below="@id/weight_edittext_id"
        android:layout_alignStart="@id/weight_edittext_id"
        android:layout_alignEnd="@id/weight_edittext_id"
        android:layout_marginBottom="75dp"
        android:focusable="false"
        android:fontFamily="@font/oswald_light"
        android:hint="dd/mm/yy"
        android:textColor="@color/white"
        android:textColorHint="#888888"
        android:textSize="28sp" />

    <Button
        android:id="@+id/save_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/date_edittext_id"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/oswald_light"
        android:text="Submit"
        android:textColor="@color/white" />

</RelativeLayout>