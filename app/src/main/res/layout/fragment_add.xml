<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/add_fragment_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background"
        android:text="Add weight"
        android:textAlignment="center"
        android:textColor="@color/neon_purple"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/add_fragment_textview_id"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logopic" />

    <EditText
        android:id="@+id/weight_edittext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_id"
        android:layout_alignRight="@id/logo_id"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:textColor="#ffffff"
        android:textColorHint="#888888"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/date_edittext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weight_edittext_id"
        android:layout_alignLeft="@id/weight_edittext_id"
        android:layout_alignRight="@id/weight_edittext_id"
        android:layout_marginTop="30dp"
        android:focusable="false"
        android:hint="dd/mm/yy"
        android:textColorHint="#888888"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/save_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_edittext_id"
        android:layout_alignParentRight="true"
        android:text="Save"
        android:textColor="#ffffff"
        android:background="@drawable/bottom_nav_bar_background"
        android:layout_marginTop="50dp"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/kg_lbs_selection_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/weight_edittext_id"
        android:layout_alignLeft="@id/save_button_id"
        android:layout_alignTop="@id/weight_edittext_id"
        android:layout_alignRight="@id/save_button_id"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:text="kg"
        android:background="@drawable/background"
        android:textAlignment="center"/>


</RelativeLayout>