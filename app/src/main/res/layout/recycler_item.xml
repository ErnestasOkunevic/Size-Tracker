<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_main">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="10dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/recycler_item_side_blue" />

    <TextView
        android:id="@+id/day_month_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/oswald_light"
        android:text="1 April"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/year_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_month_id"
        android:layout_alignStart="@id/day_month_id"
        android:fontFamily="@font/oswald_light"
        android:text="2018"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weight_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/oswald_bold"
        android:text="89.7 kg"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>